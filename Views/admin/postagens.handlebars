<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add">
<button class="btn btn-success">Nova Postagens</button>
</a>
<br>
<!-- #each é usado para colocar cada postagem criada-->

{{#each postagens}}
    <div class="card mt-4"> <!-- mt é o espaçamento, quanto maior, maior será o espaçamento -->
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{date}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Conteudo: {{conteudo}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}">
                <button class="btn btn-success">Editar Postagem</button>
            </a>
            <a href="/admin/postagens/deletar/{{_id}}">
                <button class="btn btn-danger">Apagar Postagem</button>
            </a>

        </div>
    </div>
    {{else}}
        <h4>Nenhuma postagem encontrada</h4>
{{/each}}